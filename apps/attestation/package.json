{
  "name": "@swim-io/attestation",
  "private": true,
  "version": "0.0.1",
  "description": "Scripts to simplify wormhole attestation",
  "main": "build",
  "types": "types",
  "files": [
    "build/",
    "types/",
    "*.md",
    "!*.test.*",
    "!**/fixtures/"
  ],
  "scripts": {
    "typecheck": "tsc",
    "format": "prettier --write \"./src/**/*.ts\"",
    "format:check": "prettier --check \"./src/**/*.ts\"",
    "lint": "eslint \"./src/**/*.ts\"",
    "lint:fix": "eslint --fix \"./src/**/*.ts\"",
    "verify": "yarn typecheck && yarn format:check && yarn lint",
    "build": "rm -rf ./build/ ./types/ ./tsconfig.tsbuildinfo && tsc",
    "attestFromSolanaToAptos": "ts-node -r dotenv/config src/attestFromSolanaToAptos.ts"
  },
  "dependencies": {
    "@certusone/wormhole-sdk": "^0.6.5",
    "@project-serum/borsh": "^0.2.5",
    "@solana/spl-token": "^0.3.5",
    "@solana/web3.js": "^1.63.1",
    "@swim-io/aptos": "workspace:^",
    "@swim-io/core": "^0.37.0",
    "@swim-io/solana": "^0.37.0",
    "aptos": "^1.3.16",
    "bip39": "^3.0.4",
    "bn.js": "^5.2.1",
    "decimal.js": "^10.4.2",
    "dotenv": "^16.0.1",
    "ed25519-hd-key": "^1.3.0",
    "ethers": "^5.6.9",
    "js-sha3": "^0.8.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@swim-io/eslint-config": "workspace:^",
    "@swim-io/tsconfig": "workspace:^",
    "@types/node": "^18.8.5",
    "@types/yargs": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^4.2.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
