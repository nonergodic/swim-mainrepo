{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "types",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": "src",
    "skipLibCheck": true,
    "target": "es2020",
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
