{
  "name": "@swim-io/scripts",
  "private": true,
  "version": "0.1.0",
  "description": "Scripts to simplify development workflow",
  "main": "build",
  "types": "types",
  "files": [
    "build/",
    "types/",
    "*.md",
    "!*.test.*",
    "!**/fixtures/"
  ],
  "scripts": {
    "typecheck": "tsc",
    "format": "prettier --write \"./src/**/*.ts\"",
    "format:check": "prettier --check \"./src/**/*.ts\"",
    "lint": "eslint \"./src/**/*.ts\"",
    "lint:fix": "eslint --fix \"./src/**/*.ts\"",
    "test": "jest",
    "verify": "yarn typecheck && yarn format:check && yarn lint",
    "build": "rm -rf ./build/ ./types/ ./tsconfig.tsbuildinfo && tsc",
    "prepare": "yarn verify && yarn build",
    "airdrop": "yarn build && node ./build/airdrop.js"
  },
  "dependencies": {
    "@ethers-ancillary/bsc": "^0.0.3",
    "@project-serum/borsh": "^0.2.3",
    "@solana/spl-token": "^0.1.8",
    "@solana/web3.js": "^1.31.0",
    "@swim-io/core": "^0.13.0",
    "@swim-io/evm": "^0.13.0",
    "@swim-io/evm-contracts": "^0.13.0",
    "@swim-io/pool-math": "^0.13.0",
    "@swim-io/redeemer": "^0.13.0",
    "@swim-io/solana": "^0.13.0",
    "@swim-io/token-projects": "^0.13.0",
    "@swim-io/utils": "^0.13.0",
    "bip39": "^3.0.4",
    "decimal.js": "^10.3.1",
    "dotenv": "^16.0.1",
    "ed25519-hd-key": "^1.3.0",
    "ethers": "^5.6.9",
    "graphql": "^16.5.0",
    "graphql-request": "^4.3.0",
    "moralis": "^1.8.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@swim-io/eslint-config": "workspace:^",
    "@swim-io/tsconfig": "workspace:^",
    "@types/bn.js": "^5.1.0",
    "@types/jest": "^28.1.3",
    "@types/yargs": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^4.2.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "@solana/web3.js": "^1",
    "bn.js": "^5"
  }
}
